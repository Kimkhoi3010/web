<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="project_analysis_wiz_form">
    <field name="name">mts project.analysis.print.wiz form</field>
    <field name="model">project.analysis.print.wiz</field>
    <field name="arch" type="xml">
      <form string="Print analysis">
        <group name="main" col="4">
          <field name="project_id" readonly="1" colspan="2" />
          <field name="lang_id" colspan="2" />
          <separator string="Select tasks" />
          <field name="task_ids" colspan="4" nolabel="1">
            <tree>
              <field name="name" />
            </tree>
          </field>
        </group>
        <footer>
          <button name="print_it" type="object" string="Print" class="btn-primary" />
          <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="act_project_analysis_wiz_form" model="ir.actions.act_window">
      <field name="name">Print analysis</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">project.analysis.print.wiz</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="project_analysis_wiz_form"/>
      <field name="context">{'default_project_id': active_id}</field>
      <field name="target">new</field>
  </record>

</odoo>
