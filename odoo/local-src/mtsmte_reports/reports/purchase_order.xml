<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_specific"
              inherit_id="purchase.report_purchaseorder_document">>

        <!--Replace whole address block-->
        <!--Adding margin top and bottom to the address block-->
        <xpath expr="//div[@class='page']/div[@class='row'][1]" position="replace">
            <div class="row mt96 mb96">
                <div class="col-xs-6">
                    <strong>Shipping address:</strong>
                    <!--Removed phone and fax fields-->
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>

                    <!--Removed phone and fax fields-->
                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                    </div>
                </div>
                <!--Removed phone and fax fields and added margin top to make the block even-->
                <div class="col-xs-5 col-xs-offset-1 mt16">
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div t-if="o.origin" class="col-xs-3">
                <strong>Origin:</strong>
                <p t-field="o.origin"/>
            </div>
        </xpath>

    </template>
</odoo>
