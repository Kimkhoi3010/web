<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- change to 1 -->
  <data noupdate="0">
    <record id="py3o_template_project_fr" model="py3o.template">
      <field name="name">Projet Français</field>
      <field name="filetype">odt</field>
      <field name="py3o_template_data"
        type="base64"
        file="mtsmte_reports/reports/project_fr.odt"></field>
    </record>
    <record id="py3o_template_project_en" model="py3o.template">
      <field name="name">Project English</field>
      <field name="filetype">odt</field>
      <field name="py3o_template_data"
        type="base64"
        file="mtsmte_reports/reports/project_en.odt"></field>
    </record>
  </data>

  <!--
  We first create the 'report' as qweb-pdf then updates it
  as py3o otherwise it complains about missing py3o* fields
  -->
  <report
    id="report_py3o_project"
    string="Projet Français"
    model="project.project"
    report_type="qweb-pdf"
    name="mtsmte_reports.py3o_project_fr"
    file="mtsmte_reports.py3o_project_fr"
    />
  <report
    id="report_py3o_project_en"
    string="Project English"
    model="project.project"
    report_type="qweb-pdf"
    name="mtsmte_reports.py3o_project_en"
    file="mtsmte_reports.py3o_project_en"
    />

  <record id="report_py3o_project" model="ir.actions.report.xml">
    <field name="report_type">py3o</field>
    <field name="py3o_filetype">odt</field>
    <field name="py3o_is_local_fusion" eval="True"/>
    <field name="py3o_server_id" ref="py3o_server_main"/>
    <field name="py3o_template_id" ref="py3o_template_project_fr"/>
    <field name="module">mtsmte_reports</field>
  </record>
  <record id="report_py3o_project_en" model="ir.actions.report.xml">
    <field name="report_type">py3o</field>
    <field name="py3o_filetype">odt</field>
    <field name="py3o_is_local_fusion" eval="True"/>
    <field name="py3o_server_id" ref="py3o_server_main"/>
    <field name="py3o_template_id" ref="py3o_template_project_en"/>
    <field name="module">mtsmte_reports</field>
  </record>
</odoo>
