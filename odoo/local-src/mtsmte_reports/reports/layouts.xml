<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template
      id="external_layout_header_specific"
      inherit_id="report.external_layout_header">

      <xpath expr="//div[@class='header']" position="replace">
        <!--  MTS Header -->
        <t t-if="company==o.env.ref('base.main_company')">
          <div class="header">
            <div class="row" name="company_address">
                <img class="img img-responsive img-report-logo"
                     src="/mtsmte_reports/static/src/img/mts_logo.jpg" />
            </div>
          </div>
        </t>
        <!-- MTE Header -->
        <t t-if="company==o.env.ref('__setup__.company_mte')">
          <div class="header">
            <div class="row" name="company_address">
              <div class="col-xs-3 pull-left">
                <img class="img img-responsive img-report-logo"
                     src="/mtsmte_reports/static/src/img/mte_logo.jpg" />
              </div>
              <div class="col-xs-5 pull-right red-right">
                <ul t-if="not company.custom_footer" class="list-unstyled">
                  <t t-set="company" t-value="company.sudo()"/>
                  <li t-if="company.phone"><span t-field="company.phone"/></li>
                  <li t-if="company.fax"><span t-field="company.fax"/></li>
                  <li t-if="company.email"><span t-field="company.email"/></li>
                  <li t-if="company.street"><span t-field="company.street"/></li>
                  <li><t t-if="company.zip"><span t-field="company.zip"/> </t>
                      <t t-if="company.city"><span t-field="company.city"/></t></li>
                </ul>
              </div>
            </div>
          </div>
        </t>
      </xpath>
    </template>

    <!-- Footer fot both companies -->
    <template
      id="external_layout_footer_specific"
      inherit_id="report.external_layout_footer">
      <xpath expr="//ul[@t-if='not company.custom_footer']" position="attributes">
        <attribute name="class">hidden</attribute>
      </xpath>
    </template>

</odoo>
