<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="report_invoice_document" inherit_id="account.report_invoice_document" name="MTS custom invoice">
    <xpath expr="//div[@class='row']" position="before">
        <br/><br/><br/>
    </xpath>
    <xpath expr="//p[@t-if='o.comment']" position="attributes">
      <attribute name="t-if">o.comment_text</attribute>
    </xpath>
    <xpath expr="//span[@t-field='o.comment']" position="attributes">
      <attribute name="t-options">{"widget": "html"}</attribute>
    </xpath>
  </template>

  <template id="report_invoice_document_inherit_sale" inherit_id="sale.report_invoice_document_inherit_sale" name="MTS custom invoice 2">
      <xpath expr="//div[@t-if='o.partner_shipping_id != o.partner_id']" position="attributes">
          <attribute name="class">mt48</attribute>
      </xpath>
      <xpath expr="//div[@name='reference']" position="after">
          <div name="report_number" class="col-xs-2" t-if="o.report_numbers">
              <strong>Report Number</strong>
              <p t-field="o.report_numbers"/>
          </div>
      </xpath>
      <xpath expr="//strong[@t-if='o.partner_shipping_id == o.partner_id']" position="replace"/>
      <xpath expr="//strong[@t-if='o.partner_shipping_id != o.partner_id']" position="replace"/>
  </template>
</odoo>
