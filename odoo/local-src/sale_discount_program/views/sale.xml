<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_done" position="after">
                <button name="apply_discount_programs" states="draft,sent" string="Apply discounts" type="object"/>
            </button>

            <field name="partner_id" position="after">
                <field name="program_to_add"/>
                <field name="program_code_ids_readonly" widget="many2many_tags"/>
                <field name="supporting_document_required" invisible="True"/>
                <field name="supporting_document"
                       attrs="{'required':[('supporting_document_required', '=', True)]}"/>
                <field name="program_code_ids"
                       widget="many2many_tags"
                       invisible="True"/>
            </field>
        </field>
    </record>
</odoo>
