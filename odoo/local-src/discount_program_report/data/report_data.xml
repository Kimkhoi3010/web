<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_discount_program" model="report.paperformat">
        <field name="name">European A4 Discount Program</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">0</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
    <report
        id="report_discount_program"
        string="Voucher discount program"
        model="sale.discount.program"
        report_type="qweb-pdf"
        file="discount_program_report.report_discountprogram"
        name="discount_program_report.report_discountprogram"
        paperformat="discount_program_report.paperformat_discount_program"
    />
</odoo>
