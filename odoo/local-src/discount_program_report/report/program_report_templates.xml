<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_discount_program_document">
        <div class="page">
            <!-- Images header -->
            <div class="col-xs-12">
                <div>
                    <img t-if="doc.report_config_id.top_image" t-att-src="'data:image/png;base64,%s' % (doc.report_config_id.top_image,)" style="width: 1083px;"/>
                    <div id='amount_container' t-att-style="doc.report_config_id.amount_container_style">
                        <p ><span t-esc="'%.2f'%(doc.voucher_amount)" /> <span t-field="doc.partner_id.company_id.currency_id.symbol" /></p>
                    </div>
                </div>
            </div>

            <!-- Information section -->
            <div class="col-xs-12" style="font-size: 1.5em; margin: 50px 0 50px 0;">
                <!-- Program -->
                <div class="col-xs-6" >
                    <p style="border-bottom: 1px solid black; padding: 15px 0 15px 10px;">Available until: <span t-field="doc.expiration_date" t-field-options='{"format": "EEEE d MMMM y"}' style="font-weight: bold;" /></p>
                    <p style="border-bottom: 1px solid black; padding: 15px 0 15px 10px;">Code: <span t-field="doc.voucher_code" style="font-weight: bold; "/></p>
                    <p t-field="doc.partner_id.name" style="border-bottom: 1px solid black; text-transform: uppercase; font-weight:bold; padding: 15px 0 15px 10px;"/>
                    <p t-field="doc.partner_id.email" style="padding: 15px 0 15px 10px;"/>
                </div>
                <!-- Company -->
                <div class="col-xs-6" style="float: right; padding: 60px 0 60px 120px;">
                    <p>DEPIL TECH <span t-field="doc.partner_id.company_id.partner_id.name" /></p>
                    <p t-field="doc.partner_id.company_id.partner_id.street"/>
                    <p><span t-field="doc.partner_id.company_id.partner_id.zip" /> <span t-field="doc.partner_id.company_id.partner_id.city" style="text-transform: uppercase;" /></p>
                    <p>Phone: <span t-field="doc.partner_id.company_id.phone" /></p>
                </div>
            </div>
            <!-- Black ribbon -->
            <div class="col-xs-12" style="background-color: black; color: white; font-weight: bold; font-size: 1.5em; margin: 10px 0 10px 0;">
                <p t-field="doc.report_config_id.ribbon_text" style="text-align: center;"/>
            </div>

            <!-- General Terms and conditions -->
            <div class="col-xs-12">
                <p t-field="doc.report_config_id.general_terms_conditions_title"/>
                <div class="col-xs-6">
                    <p t-field="doc.report_config_id.general_terms_conditions_left"/>
                </div>
                <div class="col-xs-6" style="float: right;">
                    <p t-field="doc.report_config_id.general_terms_conditions_right"/>
                </div>
            </div>
        </div>
    </template>
    <template id="report_discountprogram">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="discount_program_report.report_discount_program_document" t-lang="doc.source_invoice_id.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
