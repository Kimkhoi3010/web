<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.depiltech.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="priority" eval="48"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='other_info']//field[@name='name']" position="replace"/>

            <field name="payment_term_id" position="after">
                <field name="name"/>
            </field>

            <field name="fiscal_position_id" position="after">
                <field name="phototherapist_id"/>
                <field name="partner_company_type" invisible="1"/>
            </field>

            <xpath expr="//page[@name='other_info']//field[@name='origin']" position="after">
                <field name="can_edit_marketing_values" invisible="True"/>
                <field name="campaign_id" attrs="{'readonly': [('can_edit_marketing_values', '=', False)]}"/>
                <field name="medium_id" attrs="{'readonly': [('can_edit_marketing_values', '=', False)]}"/>
                <field name="source_id" attrs="{'readonly': [('can_edit_marketing_values', '=', False)]}"/>
            </xpath>

        </field>
    </record>

</odoo>