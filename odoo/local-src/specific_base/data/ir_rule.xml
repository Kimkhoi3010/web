<openerp>
    <data noupdate="1">

        <record model="ir.rule" id="company_phototherapist_rule">
            <field name="name">company phototherapist rule</field>
            <field name="model_id" ref="model_res_company_phototherapist"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record model="ir.rule" id="company_schedule_rule">
            <field name="name">company schedule rule</field>
            <field name="model_id" ref="model_res_company_schedule"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record model="ir.rule" id="product_product_company_cwu">
            <field name="name">product_product_company_cwu</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id.can_create_product', "=", True),('company_id.can_create_product', "=", user.company_id.can_create_product)]</field>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record model="ir.rule" id="product_template_company_cwu">
            <field name="name">product_template_company_cwu</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id.can_create_product', "=", True),('company_id.can_create_product', "=", user.company_id.can_create_product)]</field>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

    </data>
</openerp>