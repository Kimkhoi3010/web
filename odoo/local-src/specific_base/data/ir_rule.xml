<odoo noupdate="1">

    <record model="ir.rule" id="company_phototherapist_rule">
        <field name="name">company phototherapist rule</field>
        <field name="model_id" ref="model_res_company_phototherapist"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record model="ir.rule" id="company_schedule_rule">
        <field name="name">company schedule rule</field>
        <field name="model_id" ref="model_res_company_schedule"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record model="ir.rule" id="product_product_company_cwu">
        <field name="name">product_product_company_cwu</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('company_id.can_create_product', "=", True),('company_id.can_create_product', "=", user.company_id.can_create_product)]</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record model="ir.rule" id="product_template_company_cwu">
        <field name="name">product_template_company_cwu</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('company_id.can_create_product', "=", True),('company_id.can_create_product', "=", user.company_id.can_create_product)]</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record model="ir.rule" id="product_product_company_read">
        <field name="name">product_product_company_read</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', "=", False),('company_id', "parent_of", user.company_id.ids)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record model="ir.rule" id="product_template_company_read">
        <field name="name">product_template_company_read</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', "=", False),('company_id', "parent_of", user.company_id.ids)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>


     <record model="ir.rule" id="crm_lead_company_rule">
         <field name="name">Leads by comapny</field>
         <field name="model_id" ref="crm.model_crm_lead"/>
         <field name="domain_force">[('company_id', 'child_of', [user.company_id.id])]</field>
     </record>

    <record model="ir.rule" id="res_partner_rule_dt_accounting_group">
        <field name="name">res.partner for "DT accounting group</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="global" eval="False"/>
        <field name="groups" eval="[(6,0,[ref('specific_security.grp_dt_compta')])]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record model="ir.rule" id="res_partner_rule_base_group_user">
        <field name="name">res.partner for base group user</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="global" eval="False"/>
        <field name="groups" eval="[(6,0,[ref('base.group_user')])]"/>
        <field name="domain_force">['|',('company_id','child_of',[user.company_id.id]),('company_id','=',False)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

</odoo>
