<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_crm_lead2opportunity_partner_specific_form" model="ir.ui.view">
        <field name="name">crm.lead2opportunity.partner.specific.form</field>
        <field name="model">crm.lead2opportunity.partner</field>
        <field name="inherit_id" ref="crm.view_crm_lead2opportunity_partner"/>
        <field name="arch" type="xml">

            <group name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>

            <group name="action" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>

            <group name="action" position="after">
                <group string="Customer informations" attrs="{'invisible':[('action','!=','create')]}">
                    <group>
                        <field name="partner_phototherapist_id" attrs="{'required': [('action', '=', 'create')]}"/>
                        <field name="partner_title_id" attrs="{'required': [('action', '=', 'create')]}"/>
                        <field name="partner_lastname" attrs="{'required': [('action', '=', 'create')]}"/>
                        <field name="partner_firstname" attrs="{'required': [('action', '=', 'create')]}"/>
                        <field name="partner_birthday" attrs="{'required': [('action', '=', 'create')]}"/>
                    </group>
                    <group>
                        <label for="partner_street" string="Address"/>
                        <div class="o_address_format">
                            <field name="partner_street" placeholder="Street..." class="o_address_street"
                                   attrs="{'required': [('action', '=', 'create')]}"/>

                            <field name="partner_street2" placeholder="Street 2..." class="o_address_street"/>

                            <field name="partner_city" placeholder="City" class="o_address_city"
                                   attrs="{'required': [('action', '=', 'create')]}"/>

                            <field name="partner_state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>

                            <field name="partner_zip" placeholder="ZIP" class="o_address_zip"
                                   attrs="{'required': [('action', '=', 'create')]}"/>

                            <field name="partner_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True}'/>
                        </div>
                        <field name="partner_function"/>
                        <field name="partner_phone" attrs="{'required': [('action', '=', 'create')]}"/>
                        <field name="partner_mobile" attrs="{'required': [('action', '=', 'create')]}"/>
                        <field name="partner_email" attrs="{'required': [('action', '=', 'create')]}"/>
                    </group>
                </group>
            </group>

        </field>
    </record>

</odoo>
