<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="product_substance_measure_view_tree" model="ir.ui.view">
    <field name="name">product.substance.measure.tree</field>
    <field name="model">product.substance.measure</field>
    <field name="arch" type="xml">
      <tree string="Measure">
        <field name="name"/>
        <field name="sub_cas_number"/>
        <field name="customer_id"/>
        <field name="legal_limit_min"/>
        <field name="product_uom_id"/>
        <field name="legal_limit_max"/>
        <field name="comments"/>
        <field name="has_limit_min"/>
        <field name="has_limit_max"/>
        <field name="detection_limit"/>
        <field name="quantification_limit"/>
      </tree>
    </field>
  </record>

  <record id="product_substance_measure_view_form" model="ir.ui.view">
    <field name="name">product.substance.measure.form</field>
    <field name="model">product.substance.measure</field>
    <field name="arch" type="xml">
      <form string="Measure">
        <sheet>
          <group>
            <field name="name"/>
            <field name="sub_cas_number"/>
            <field name="customer_id"/>
            <field name="legal_limit_min"/>
            <field name="product_uom_id"/>
            <field name="legal_limit_max"/>
            <field name="comments"/>
            <field name="has_limit_min"/>
            <field name="has_limit_max"/>
            <field name="detection_limit"/>
            <field name="quantification_limit"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>
