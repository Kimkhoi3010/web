<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="product_substance_view_tree" model="ir.ui.view">
    <field name="name">product.substance.tree</field>
    <field name="model">product.substance</field>
    <field name="arch" type="xml">
      <tree string="Substance">
        <field name="name"/>
        <field name="sub_cas_number"/>
        <field name="customer_id"/>
        <field name="legal_limit_min"/>
        <field name="product_uom_id"/>
        <field name="legal_limit_max"/>
        <field name="comments"/>
        <field name="has_limit_min"/>
        <field name="has_limit_max"/>
        <field name="detection_limit"/>
        <field name="quantification_limit"/>
      </tree>
    </field>
  </record>

  <record id="product_substance_view_form" model="ir.ui.view">
    <field name="name">product.substance.form</field>
    <field name="model">product.substance</field>
    <field name="arch" type="xml">
      <form string="Substance">
        <sheet>
          <group>
            <field name="name"/>
            <field name="sub_cas_number"/>
            <field name="customer_id"/>
            <field name="legal_limit_min"/>
            <field name="product_uom_id"/>
            <field name="legal_limit_max"/>
            <field name="comments"/>
            <field name="has_limit_min"/>
            <field name="has_limit_max"/>
            <field name="detection_limit"/>
            <field name="quantification_limit"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="product_substance_action_tree" model="ir.actions.act_window">
      <field name="name">Substances</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.substance</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="product_substance_view_tree"/>
  </record>

</odoo>
