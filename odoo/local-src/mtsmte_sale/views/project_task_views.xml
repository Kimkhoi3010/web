<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_form2_specific" model="ir.ui.view">
    <field name="name">project.task.form.specific</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='planned_hours']" position="after">
          <field name="tested_sample"/>
      </xpath>
      <notebook position="inside">
        <page string="Substances to analyze">
          <group>
            <field name="product_method_id"/>
            <field name="equipment_id"/>
            <field name="product_extraction_type_id"/>
            <field name="legal_reference"/>
            <field name="conformity"/>
          </group>
          <field name="product_substance_measure_ids">
            <tree editable="bottom">
              <field name="product_substance_id"/>
              <field name="sub_cas_number"/>
              <field name="comments"/>
              <field name="legal_limit_min"/>
              <field name="product_uom_id"/>
              <field name="legal_limit_max"/>
              <field name="has_limit_min"
                     invisible="True"/>
              <field name="has_limit_max"
                     invisible="True"/>
              <field name="detection_limit"/>
              <field name="quantification_limit"/>
              <field name="bdl"/>
              <field name="measure"/>
              <field name="conformity"/>
            </tree>
          </field>
        </page>
        <page string="Test Parameters">
          <group>
              <field name="test_parameters"/>
          </group>
        </page>
        <page string="Results &amp; Observations">
          <group name="sentence">
              <field name="sentence_id"/>
          </group>
          <group name="results">
              <field name="results" nolabel="1"/>
          </group>
        </page>
      </notebook>
    </field>
  </record>

  <record id="view_task_tree2_specific" model="ir.ui.view">
    <field name="name">project.task.tree.specific</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_tree2"/>
    <field name="arch" type="xml">
      <!-- Set date_deadline always visible -->
      <xpath expr="//field[@name='date_deadline']" position="replace">
        <field name="date_deadline"/>
      </xpath>

    </field>
  </record>

  <record id="view_task_search_form_specific" model="ir.ui.view">
    <field name="name">project.task.search.specific</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_search_form"/>
    <field name="arch" type="xml">
      <xpath expr="//search/group" position="inside">
        <filter string="Deadline" name="group_by_date_deadline"
                context="{'group_by':'date_deadline'}"/>
      </xpath>
    </field>
  </record>

</odoo>
