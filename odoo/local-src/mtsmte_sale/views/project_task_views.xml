<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_form2_specific" model="ir.ui.view">
    <field name="name">project.task.form.specific</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
      <notebook position="inside">
        <page string="Substances to analyze">
          <field name="product_substance_measure_ids">
            <tree editable="bottom"
              create="false"
              delete="false">
              <field name='task_id'
                attrs="{'invisible':'1', 'readonly':'1'}"/>
              <field name='product_substance_id' readonly="True"/>
              <field name='product_uom_id' readonly="True"/>
              <field name='legal_limit' readonly="True"/>
              <field name='measure'/>
              <field name='conformity'/>
            </tree>
          </field>
        </page>
      </notebook>
    </field>
  </record>

</odoo>
