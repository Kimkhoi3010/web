<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="product_extraction_type_view_tree" model="ir.ui.view">
    <field name="name">product.extraction.type.tree</field>
    <field name="model">product.extraction.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="product_ids" invisible="True"/>
      </tree>
    </field>
  </record>

  <record id="product_extraction_type_view_form" model="ir.ui.view">
    <field name="name">product.extraction.type.form</field>
    <field name="model">product.extraction.type</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="name"/>
          <field name="product_ids" invisible="True"/>
        </group>
      </form>
    </field>
  </record>

  <record id="product_extraction_type_action_tree" model="ir.actions.act_window">
      <field name="name">Extraction Types</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.extraction.type</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="product_extraction_type_view_tree"/>
  </record>

</odoo>
