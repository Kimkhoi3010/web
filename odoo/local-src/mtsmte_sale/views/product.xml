<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="product_template_form_view_specific" model="ir.ui.view">
    <field name="name">product.template.common.form.specific</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr='//field[@name="purchase_ok"]/..' position="after">
        <div>
          <field name='is_chemistry'/>
          <label for="is_chemistry"/>
        </div>
      </xpath>
      <notebook position="inside">
        <page string="Substances to analyze" attrs="{'invisible': [('is_chemistry', '=', False)]}">
          <group>
            <group name="Substances" string="Substances">
              <field name='product_substance_ids'>
                <tree>
                  <field name='name'/>
                  <field name='legal_limit'/>
                  <field name='comments'/>
                  <field name='product_uom_id'/>
                </tree>
              </field>
            </group>
          </group>
        </page>
      </notebook>
    </field>
  </record>

</odoo>
