<odoo>

    <record id="sale_discount_program_form" model="ir.ui.view">
        <field name="model">sale.discount.program</field>
        <field name="inherit_id" ref="sale_discount_program.sale_discount_program_form"/>
        <field name="arch" type="xml">
            <field name="program_name" position="after">
                <field name="allowed_company_ids" widget="many2many_tags" invisible="context.get('program_voucher')"/>
            </field>
        </field>
    </record>

    <record id="sale_discount_program_code_form" model="ir.ui.view">
        <field name="inherit_id" ref="sale_discount_program.sale_discount_program_code_form"/>
        <field name="model">sale.discount.program</field>
        <field name="arch" type="xml">
            <field name="combinable" position="attributes">
                <attribute name="invisible">not context.get('program_voucher')</attribute>
            </field>

            <group name="promo_code_group" position="before">
                <group>
                    <field name="allowed_company_ids" widget="many2many_tags" invisible="context.get('program_voucher')"/>
                </group>
            </group>

            <xpath expr="//field[@name='action_ids']/parent::group" position="after">
                <group>
                    <field name="note_message_for_action" required="context.get('program_voucher', False)" invisible="not context.get('program_voucher')"/>
                </group>
            </xpath>
            <field name="partner_id" position="after">
                <field name="customer_required" invisible="1" />
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="attrs">{'required': [('customer_required', '=', True), ('type', '!=', 'gift_voucher')]}</attribute>
            </field>
        </field>
    </record>

    <!-- Displays Program menus only for depiltech admin -->
    <record id="sale_discount_program.menu_discount_program" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('specific_security.group_admin_depiltech'))]"/>
    </record>
    <record id="sale_discount_program.menu_discount_promo" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('specific_security.group_admin_depiltech'))]"/>
    </record>
    <record id="sale_discount_program.menu_discount_voucher" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('specific_security.group_admin_depiltech'))]"/>
    </record>
</odoo>
