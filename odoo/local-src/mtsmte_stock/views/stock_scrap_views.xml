<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="stock_scrap_form_view2_specific" model="ir.ui.view">
    <field name="name">stock.scrap.form</field>
    <field name="model">stock.scrap</field>
    <field name="inherit_id" ref="stock.stock_scrap_form_view2"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_id']" position="after">
        <field name="procurement_group_id"/>
      </xpath>
      <xpath expr="//field[@name='lot_id']" position="replace">
        <field
          name="lot_id"
          attrs="{'invisible': [('tracking', '=', 'none')]}"
          domain="[('procurement_group_id','=', context.get('procurement_group_id'))]"
          />
      </xpath>
    </field>
  </record>

</odoo>
